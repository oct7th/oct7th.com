RewriteEngine on
RewriteBase /

# Redirect all traffic sent to oct7th.com, oct7th2015.com and
# october7th2015.com.
RewriteCond %{lowercase:%{HTTP_HOST}} (oct7th|october7th) [NC]
RewriteRule "^(/?.*)$" "http://oct7lastday.com/$1" [R=301]

# Redirect Google verification file to same path
RewriteRule "^/(google.*)$" "/$1" [L]

# GENERATED RULES - DO NOT EDIT
<% langs.each do |lang| %>
RewriteCond %{HTTP:Accept-Language} ^<%= lang.to_s %>.*$ [NC]
RewriteCond %{REQUEST_URI} ^/$ [NC]
RewriteRule ^/?$ /<%= lang.to_s %>/ [L,R=301]
<% end %>
# English is the default language
RewriteCond %{REQUEST_URI} ^/$ [NC]
RewriteRule ^/?$ /en/ [L,R=301]
